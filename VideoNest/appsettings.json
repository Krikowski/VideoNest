{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "VideoNest": "Debug"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "VideoNest.Services.RabbitMQPublisher": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/uploads/logs/videonest-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName" ],
    "Properties": {
      "Application": "VideoNest"
    }
  },

  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin@mongodb:27017",
    "DatabaseName": "Hackathon_FIAP"
  },

  "Redis": {
    "ConnectionString": "redis:6379"
  },

  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin",
    "QueueName": "video_queue",
    "DeadLetterExchange": "dlx_video_exchange",
    "DeadLetterQueue": "dlq_video_queue",
    "VirtualHost": "/",
    "ExchangeType": "direct",
    "RetryAttempts": 3,
    "RetryDelaySeconds": 2,
    "MessageTtlMilliseconds": 300000
  },

  "VideoStorage": {
    "BasePath": "/uploads",
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [ ".mp4", ".avi", ".mov", ".mkv" ],
    "MaxConcurrentUploads": 5
  },

  "VideoProcessing": {
    "DefaultFps": 1.0,
    "OptimizedFps": 0.5,
    "DurationThresholdSeconds": 120,
    "MaxParallelism": 4,
    "FrameQuality": 80,
    "TempFramePath": "/tmp/frames"
  },

  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 104857600,
      "KeepAliveTimeout": "00:02:00"
    }
  },

  "HealthChecks": {
    "MongoDb": {
      "DatabaseName": "Hackathon_FIAP"
    },
    "RabbitMQ": {
      "HostName": "rabbitmq",
      "Port": 5672,
      "UserName": "admin",
      "Password": "admin"
    }
  }
}