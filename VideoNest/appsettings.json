{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin@mongodb:27017",
    "DatabaseName": "Hackathon_FIAP"
  },

  "Redis": {
    "ConnectionString": "redis:6379"
  },

  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin",
    "QueueName": "video_queue",
    "DeadLetterExchange": "dlx_video_queue",
    "DeadLetterQueue": "dlq_video_queue"
  },

  "VideoStorage": {
    "BasePath": "/uploads"
  }
}